<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimaryInverse">@color/text_color_yellow_dark</item>
    </style>

    <!-- dialog样式 -->
    <style name="dialog_custom" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowNoTitle">false</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">false</item> <!--背景是否模糊显示-->
    </style>

    <!-- dialog底部弹出菜单动画 -->
    <style name="bottom_menu_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_menu_enter</item>
        <item name="@android:windowExitAnimation">@anim/bottom_menu_exit</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LineH_Fill_Width0_5_ForView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineH_Fill_Width_5_ForView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dip</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineH_Yellow_Fill_Width1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineV_Fill_Width0_5_ForView">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineH_Fill_Width1_5_ForView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dip</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineH_Fill_Height0_5_ForView">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineV_Fill_Width1">
        <item name="android:layout_width">1.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineV_Fill_Width2">
        <item name="android:layout_width">2dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_grey_bg</item>
        <item name="android:layout_margin">@dimen/dp_4</item>
    </style>

    <style name="TextColor_White_16">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TextColor_Grey_18">
        <item name="android:textColor">@color/darkgrey1</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="TextColor_Grey_16">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TextColor_YellowDark_14">
        <item name="android:textColor">@color/text_color_yellow_dark</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Login_Button_Style">
        <item name="android:background">@drawable/button_style_blue</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Login_Button_Style2">
        <item name="android:background">@drawable/button_style_blue4</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
