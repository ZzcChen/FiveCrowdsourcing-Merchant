            <com.allen.library.SuperTextView
                android:id="@+id/my_wallet"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftIconRes="@mipmap/yuan_48px"
                stv:sLeftTextString="我的钱包"
                stv:sRightTextString="查看"
                stv:sRightTextSize="12dp"
                stv:sRightIconRes="@mipmap/arrow_right_red" />

            <com.allen.library.SuperTextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="通知设置"
                stv:sRightViewType="switchBtn"
                stv:sSwitchIsChecked="true"
                stv:sSwitchMinWidth="50dp"
                stv:sThumbResource="@drawable/thumb"
                stv:sTrackResource="@drawable/track"
                />
            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                stv:sLeftTextString="账号与安全"
                stv:sRightTextString="已保护"
                stv:sRightTextSize="12dp"
                stv:sRightIconRes="@mipmap/arrow_right_red"
                stv:sRightTvDrawableLeft="@mipmap/v1"
                android:layout_height="50dp" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sDividerLineType="bottom"
                stv:sLeftTextString="设置中心"
                stv:sRightIconRes="@mipmap/arrow_right_red" />


            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
