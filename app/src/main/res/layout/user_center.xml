            android:paddingTop="20dp">

            <com.allen.library.SuperTextView
                android:id="@+id/user_info"
                stv:sDividerLineType="both"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sLeftIconRes="@mipmap/head_default"
                stv:sLeftTextString="帐号管理"
                stv:sRightIconRes="@mipmap/arrow_right_red"
                stv:sLeftViewGravity="left_center"
                stv:sRightTextString="点击认证"
                stv:sRightTextSize="12dp"/>

            <!--<com.allen.library.SuperTextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50dp"-->
